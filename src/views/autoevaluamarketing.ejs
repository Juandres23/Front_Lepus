  <body>

    <!-- LOGO -->
    <nav class="img1">
      <label for="" class="brand">
        <a href="/"><img src="img/lepuslogo.jpg" alt=""></a>
        <h1 class="display-1 my-5 text text-uppercase fw-bold">LEPUS</h1>
      </label>
    </nav>

    <!-- MENU -->

    <%- include('partials/navigation.ejs') %>
    
    <!-- HERRAMIENTA INTERACTIVA -->
    <div class="container">
      <h2>Autoevaluación de Marketing Digital</h2>
      <p dir="ltr">Responde las siguientes preguntas para obtener recomendaciones personalizadas</p>
      <p dir="ltr" id="instruction">Haz clic en "Comenzar" para iniciar la autoevaluación:</p>
      
        <button id="start-button" onclick="showQuestionnaire()">Comenzar</button>
      
        <form id="questionnaire" style="display: none;">
          <!-- Preguntas del cuestionario -->
          <div class="form-group">
            <label for="question1" dir="ltr">Pregunta 1: ¿Cuál es tu nivel de experiencia en marketing digital?</label>
            <select id="question1">
              <option value="novato" dir="ltr">Novato</option>
              <option value="intermedio" dir="ltr">Intermedio</option>
              <option value="avanzado" dir="ltr">Avanzado</option>
              <option value="experto" dir="ltr">Experto</option>
            </select>
          </div>
      
          <div class="form-group">
            <label for="question2" dir="ltr">Pregunta 2: ¿Qué canales de marketing digital utilizas actualmente?</label>
            <select id="question2">
          <option value="redes-sociales" dir="ltr">Redes sociales</option>
          <option value="email-marketing" dir="ltr">Email marketing</option>
          <option value="busqueda-paga" dir="ltr">Búsqueda paga (SEM)</option>
          <option value="contenido-blog" dir="ltr">Contenido de blog</option>
        </select>
          </div>
      
          <div class="form-group">
            <label for="question3" dir="ltr">Pregunta 3: ¿Cuál es tu objetivo principal con el marketing digital?</label>
            <select id="question3">
              <option value="generar-ventas" dir="ltr">Generar ventas</option>
              <option value="aumentar-visibilidad" dir="ltr">Aumentar visibilidad</option>
              <option value="construir-marca" dir="ltr">Construir marca</option>
              <option value="generar-leads" dir="ltr">Generar leads</option>
            </select>
          </div>
      
          <div class="form-group">
            <label for="question4" dir="ltr">Pregunta 4: ¿Cuál es tu presupuesto mensual para marketing digital?</label>
        <select id="question4">
          <option value="menos-1000" dir="ltr">Menos de $1000</option>
          <option value="1000-5000" dir="ltr">$1000 - $5000</option>
          <option value="5000-10000" dir="ltr">$5000 - $10000</option>
          <option value="mas-10000" dir="ltr">Más de $10000</option>
        </select>
          </div>
      
          <div class="form-group">
            <label for="question5" dir="ltr">Pregunta 5: ¿Cuál es tu principal desafío en el marketing digital?</label>
        <select id="question5">
          <option value="medir-roi" dir="ltr">Medir ROI</option>
          <option value="crear-contenido" dir="ltr">Crear contenido relevante</option>
          <option value="segmentar-audiencia" dir="ltr">Segmentar la audiencia</option>
          <option value="competencia" dir="ltr">Competir con otros</option>
        </select>
          </div>
          <button type="submit">Generar Informe</button>
        </form>

          <!-- Aquí se mostrará el informe generado -->
        <div id="report">
        </div>

         <!-- Botón "Generar Reporte" oculto -->
    <form id="generate-report-form" action="generatePdf" method="post" style="display: none;">
      <input type="hidden" name="datos" id="report-content">
      <label for="formato"></label>
      <button type="submit">
        Generar Reporte
      </button>
    </form>
        

      </div>

      
    <!-- PIE DE PAGINA -->

    <footer class="w-100 d-flex align-items justify-content-center d-flex-wrap">
