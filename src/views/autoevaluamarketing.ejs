    <link rel="stylesheet" href="css/autoevaluamarketing.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <link rel="icon" href="img/lepuslogo.jpg" />
    <title><%= title%></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Graduate&display=swap" rel="stylesheet">
  </head>

  <body>
    <!-- HEADER -->
    <!-- Primer nav -->
    <div class="ingreso">
      <nav dir="ltr">
        <p>Si trabajas en Lepus Ingresa <a href="login.html">Aquí</a></p>
      </nav>
    </div>

    <!-- LOGO -->
    <nav class="img1">
      <label for="" class="brand">
        <a href="/"><img src="img/lepuslogo.jpg" alt=""></a>
        <h1 class="display-1 my-5 text text-uppercase fw-bold">LEPUS</h1>
      </label>
    </nav>

    <!-- MENU -->

    <%- include('partials/navigation') %>
    
    <!-- HERRAMIENTA INTERACTIVA -->
  <div class="container">
    <h2>Autoevaluación de Marketing Digital</h2>
    <p dir="ltr">Responde las siguientes preguntas para obtener recomendaciones personalizadas</p>
    <p dir="ltr">Haz clic en "Comenzar" para iniciar la autoevaluación:</p>

    <button id="start-button">Comenzar</button>

    <form id="questionnaire">
      <div class="form-group">
        <label for="name" dir="ltr">Nombre:</label>
        <input type="text" dir="ltr" id="name" required>
      </div>

      <div class="form-group">
        <label for="email" dir="ltr">Correo electrónico:</label>
        <input type="email" dir="ltr" id="email" required>
      </div>

      <div class="form-group">
        <label for="question1" dir="ltr">Pregunta 1:</label>
        <input type="text" dir="ltr" id="question1" required>
      </div>

      <div class="form-group">
        <label for="question2" dir="ltr">Pregunta 2:</label>
        <input type="text" dir="ltr" id="question2" required>
      </div>
      <button type="submit">Generar Informe</button>
    </form>

    <div id="report"></div>
  </div>

  <script src="script.js"></script>


    <!-- PIE DE PAGINA -->

    <footer class="w-100 d-flex align-items justify-content-center d-flex-wrap">
      <p class="fs-5 px-3 pt-3">
        LEPUS &copy; Todos los derechos reservados 2023
      </p>
      <div id="icons">
        <a href="#"><i class="bi bi-whatsapp"></i></a>
        <a href="#"><i class="bi bi-facebook"></i></a>
        <a href="#"><i class="bi bi-instagram"></i></a>
      </div>
    </footer>
  </body>
</html>

