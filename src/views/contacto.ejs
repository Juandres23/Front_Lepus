  <!-- MENU -->

  <%- include('partials/navigation') %>


  <!-- SECCION CONTACTO -->
  <section id="contacto" class="contacto">
    <div class="contenido seccion">
      <h2>CONTACTO</h2>
      <p class="fs-5">
        En este espacio puedes comunicarte con nosotros llenando el siguiente
        formulario o hablandonos por WhatsApp, puedes contarnos tus ideas o
        sugerencias, nos pondremos en contacto contigo lo más pronto posible y
        visitanos en nuestras redes sociales
      </p>
      <div class="fila">
        <!-- FORMULARIO CONTACTO -->
        <div class="col">
          <form action="https://formsubmit.co/davjdandreasochu2013@gmail.com" method="POST">
          <input type="text" dir="ltr" name="Nombre" placeholder="Nombre" required/>
          <textarea name="Mensaje" dir="ltr" id="" cols="" rows="10" placeholder="Escribe tu mensaje aquí" required></textarea>
          <div class="form-group" dir="ltr">
            <label for="fileUpload" class="form-label">Seleccionar archivo</label>
            <input class="form-control" id="fileUpload" name="file" type="file" accept="image/*" required />
          </div>
          <button>Enviar mensaje</button>
          
          <input type="hidden" name="_next" value="http://localhost:2000/">
          <input type="hidden" name="_captcha" value="false">
        </form>
        </div>

      <!-- Mensaje de agradecimiento por defecto -->
<div id="mensaje-agradecimiento" style="display: none;">
  <p>Hemos recibido tu correo. Te responderemos lo antes posible.</p>
</div>


<!-- JAVASCRIPT -->
<script>
  // Mostrar el mensaje de agradecimiento después de enviar el formulario
  document.querySelector('form').addEventListener('submit', function() {
    document.getElementById('mensaje-agradecimiento').style.display = 'block';
  });
</script>

      </div>
    </div>
  </section>

